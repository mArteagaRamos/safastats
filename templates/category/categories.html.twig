{% extends 'base.html.twig' %}

{% block title %}Nueva categoría{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h2>Crear nueva categoría</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Nombre de la categoría</label>
                <input type="text" name="name" class="form-control" required>
            </div>

            <div class="mb-4">
                <label class="form-label">Imagen de la categoría</label>
                <input type="text" name="image" class="form-control" placeholder="https://..." required>
            </div>

            <h4>Seleccionar productos</h4>

            <table class="table table-hover align-middle">
                <thead class="table-light">
                <tr>
                    <th></th>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Tipo</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>
                            <input type="checkbox" name="items[]" value="{{ product.id }}">
                        </td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.brand ?? '-' }}</td>
                        <td>{{ product.productType ?? '-' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="text-center mt-4">
                <button class="btn btn-primary px-5">
                    Guardar categoría
                </button>
            </div>
        </form>
    </div>

{% endblock %}
